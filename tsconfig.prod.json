{
    "compilerOptions": {
        "module": "es2015",
        "watch": false,
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "pretty": true,
        "strictBindCallApply": false,
        "baseUrl": "src",
        "allowJs": true,
        "rootDirs": ["node_modules", "src"],
        "lib":[
          "dom", "es5", "dom.iterable", "es6"
        ],
        //"outFile": "dist/js/rhd.js",
        "outDir": "node_modules/@rhd",
        "paths": {
            "@patternfly/pfelement/pfelement": [
                "components/@types/patternfly__pfelement"
            ],
            "../../../@patternfly/pfelement/pfelement": [
                "components/@types/patternfly__pfelement"
            ],
            "../../@patternfly/pfelement/pfelement": [
                "components/@types/patternfly__pfelement"
            ]
        }
    },
    "include": [
        "src/**/*.ts"       
    ]
}
