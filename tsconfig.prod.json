{
    "compilerOptions": {
        "module": "system",
        "watch": false,
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "pretty": true,
        "strictBindCallApply": false,
        "baseUrl": "src/scripts",
        "allowJs": true,
        "rootDirs": ["node_modules", "src/scripts"],
        "lib":[
          "dom", "es5", "dom.iterable", "es6"
        ],
        "outFile": "dist/js/@rhd/rhd.js",
        "outDir": "dist/js/@rhd/",
        "paths": {
            "@patternfly/pfelement/*": [
                "@types/patternfly__pfelement"
            ]
        }
    },
    "include": [
        "src/scripts/@rhd/**/dp-alert.ts"
    ]
}
