{
    "compilerOptions": {
        "module": "amd",
        "watch": false,
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "pretty": true,
        "strictBindCallApply": false,
        "baseUrl": "src/components",
        "allowJs": true,
        "rootDirs": ["node_modules", "src/components"],
        "lib":[
          "dom", "es5", "dom.iterable", "es6"
        ],
        //"outFile": "dist/js/rhd.js",
        "outDir": "node_modules/@rhd/components",
        "paths": {
            "@patternfly/pfelement/pfelement.umd": [
                "@types/patternfly__pfelement"
            ],
            "@patternfly/pfelement/pfelement": [
                "@types/patternfly__pfelement"
            ]
        }
    },
    "include": [
        "src/components/**/*.ts"       
    ]
}
