{
    "compilerOptions": {
        "module": "umd",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "downlevelIteration": true,
        "pretty": true,
        "allowJs": true,
        "rootDirs": ["node_modules", "src/scripts"],
        "lib":[
          "dom", "es5", "es6"
        ],
        //"outFile": "dist/js/rhd.js",
        "outDir": "node_modules/@rhd/"
    },
    "include": [
        "src/scripts/@rhd/**/*.ts"       
    ]
}
