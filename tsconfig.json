{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "pretty": true,
        "allowJs": true,
        "baseUrl": "src/scripts",
        "rootDirs": ["node_modules", "src/scripts"],
        "lib":[
          "dom", "es5", "es6"
        ],
        //"outFile": "dist/js/rhd.js",
        "outDir": "dist/js/"
    },
    "include": [
        "node_modules/@rhelements/rhelement/reveal.js",
        "node_modules/@rhelements/rhelement/rhelement.js",
        "node_modules/@rhelements/rh-datetime/rh-datetime.js",
        "node_modules/@fortawesome/fontawesome-svg-core/index.es.js",
        "node_modules/@fortawesome/pro-light-svg-icons/index.es.js",
        "node_modules/@fortawesome/pro-regular-svg-icons/index.es.js",
        "node_modules/@fortawesome/pro-solid-svg-icons/index.es.js",
        "src/scripts/@rhd/**/*.ts"       
    ]
}
