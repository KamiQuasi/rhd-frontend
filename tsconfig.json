{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "pretty": true,
        "allowJs": true,
        "baseUrl": "src/scripts",
        "rootDirs": ["node_modules", "src/scripts"],
        "lib":[
          "dom", "es5", "es6"
        ],
        //"outFile": "rhd.js"
        "outDir": "dist/js/"
    },
    "include": [
        //"node_modules/@fortawesome/**/*.es.js",
        "node_modules/@rhelements/**/*.js",
        "src/scripts/@rhd/**/*.ts"        
        //"src/scripts/@rhd/js/app.js"
        //"node_modules/@fortawesome/**/*"
    ]
}
