{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "downlevelIteration": true,
        "pretty": true,
        "allowJs": true,
        "baseUrl": "src/scripts",
        "rootDirs": ["node_modules", "src/scripts"],
        "paths": {
            "PFElement": ["../../node_modules/@patternfly/pfelement/*"]
        },
        "lib":[
          "dom", "es5", "es6"
        ],
        //"outFile": "dist/js/rhd.js",
        "outDir": "dist/js/"
    },
    "include": [
        // "node_modules/@patternfly/pfelement/reveal.js",
        // "node_modules/@patternfly/pfelement/pfelement.js",
        // "node_modules/@patternfly/pfe-datetime/pfe-datetime.js",
        // "node_modules/@patternfly/pfe-cta/pfe-cta.js",
        // "node_modules/@patternfly/pfe-card/pfe-card.js",
        // "node_modules/@patternfly/pfe-band/pfe-band.js",
        // "node_modules/@fortawesome/fontawesome-svg-core/index.es.js",
        // "node_modules/@fortawesome/pro-light-svg-icons/index.es.js",
        // "node_modules/@fortawesome/pro-regular-svg-icons/index.es.js",
        // "node_modules/@fortawesome/pro-solid-svg-icons/index.es.js",
        "node_modules/@patternfly/pfe-types/*.ts",
        "node_modules/@fortawesome/**/*.ts",
        "src/scripts/@rhd/**/*.ts"       
    ]
}
